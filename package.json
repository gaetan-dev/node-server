{
  "name": "node-starter",
  "version": "1.0.0",
  "description": "Node starter with ES2017 & Wepback",
  "main": "src/app.js",
  "scripts": {
    "dev:server": "nodemon src/boot.js --exec \"npm run lint && node\"",
    "dev:debug": "nodemon --inspect",
    "lint": "standard --verbose | snazzy || exit 0",
    "doc": "rimraf doc && jsdoc -c jsdoc.conf -r ./src/ -d ./doc",
    "test": "cross-env NODE_ENV=test jest",
    "build": "npm run lint && npm run doc && cross-env NODE_ENV=production webpack --progress"
  },
  "babel": {
    "ignore": "node_modules",
    "presets": [
      "latest"
    ]
  },
  "standard": {
    "env": {
      "node": true,
      "jest": true
    },
    "parser": "babel-eslint",
    "ignore": [
      "/node-modules",
      "/build/",
      "/doc/"
    ]
  },
  "author": "Gaetan Meynier",
  "license": "ISC",
  "dependencies": {
    "babel-core": "^6.26.0",
    "colors": "^1.1.2",
    "cross-env": "^5.1.3",
    "source-map-support": "^0.5.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "babel-preset-latest": "^6.24.1",
    "clean-webpack-plugin": "^0.1.17",
    "nodemon": "^1.14.11",
    "rimraf": "^2.6.2",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3",
    "webpack": "^3.10.0",
    "webpack-node-externals": "^1.6.0"
  }
}
